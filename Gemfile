gem 'will_paginate', '~> 3.1.0'
gem 'will_paginate-bootstrap', '~> 1.0', '>= 1.0.1'

group :development do
  # gem 'quiet_assets', '~> 1.1.0' # see https://github.com/evrone/quiet_assets
