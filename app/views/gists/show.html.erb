<%- model_class = Gist -%>
<div class="page-header">
  <h1>Pokaż klienta</h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name("Imię klienta") %></dt>
      <dd><pre class="prettyprint"><%= @gist.src %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name("Nazwisko klienta") %></dt>
      <dd><pre class="prettyprint"><%= @gist.lang %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name("Rodzaj biletu") %></dt>
      <dd><pre class="prettyprint"><%= @gist.desc %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', default: t("Wróć")),
              gists_path, class: 'btn btn-default'  %>
  <%= link_to t('.edit', default: t("Edytuj")),
              edit_gist_path(@gist), class: 'btn btn-default' %>
  <%= link_to t('.destroy', default: t("Usuń")),
              gist_path(@gist),
              method: 'delete',
              data: { confirm: t('.confirm', default: t("Czy na pewno chcesz usunąć klienta?", default: 'Czy na pewno chcesz usunąć klienta?')) },
              class: 'btn btn-danger' %>
</div>